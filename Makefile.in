include $(topsrcdir)/config/rules.mk

install::
	$(INSTALL) $(JSLIBFILES) $(DIST)/bin/irc/js/lib
	$(INSTALL) $(XULLIBFILES) $(DIST)/bin/irc/xul/lib
	$(INSTALL) $(TESTFILES) $(DIST)/bin/irc/tests
